;******************************************************************************
;
;                         SCATTER LOADING DESCRIPTION
;                                    ARM
;                             KEIL's uVision3 
;                   (RealView Microprocessor Developer Kit)
;
; Filename      : STM32_Flash.scat
;******************************************************************************

LR_IROM1 0x08000000 0x0007FFFF 									;; Load region
{
    ER_IROM1 0x08000000	0x0807FFFF
    {
        vectors.o (VECT, +First)
        init.o (INIT)
        * (+RO)
    }

    RW_IRAM1 0x20000000 0x0000FC00
    {
        * (+RW,+ZI)
    }                                                           ;; The following declarations select the "two region model" ;
                                                                ;; A default __user_initial_stackheap() will be used        ;
    ARM_LIB_HEAP  0x2000DC00 EMPTY  0x00002000   {}				;; for stm32f103ze, asign 8K heap
    ARM_LIB_STACK 0x20010000 EMPTY -0x00000400   {}				;; for stm32f103ze, asign 1K stack
}